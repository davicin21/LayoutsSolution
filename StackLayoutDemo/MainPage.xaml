<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutDemo.MainPage">

    <StackLayout Orientation="Horizontal" Spacing="30" BackgroundColor="Blue" >
        <Label Text="Label one" BackgroundColor="GreenYellow" HorizontalOptions="Center" VerticalOptions="EndAndExpand"/>
        <Label Text="Label two" BackgroundColor="Beige" HorizontalOptions="Center"/>
        <Label Text="Label three" Background="Orange" VerticalOptions="FillAndExpand"/>
    </StackLayout>

</ContentPage>
